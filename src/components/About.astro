---
import Avatar from "@/assets/avatar.jpeg";
import { Image } from "astro:assets";
const skills = [
  "JavaScript/TypeScript",
  "React.js",
  "Next.js",
  "Node.js",
  "Astro.js",
  "Tailwind CSS",
  "Git",
];
---

<section id="about" class="py-20 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-16" data-aos="fade-up">
      About Me
    </h2>

    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div data-aos="fade-right">
        <Image
          src={Avatar}
          alt="Pedro Sanchez"
          class="rounded-lg shadow-lg w-full max-w-md mx-auto"
        />
      </div>

      <div data-aos="fade-left">
        <p class="text-lg mb-8 text-gray-600 dark:text-gray-400">
          I'm a full-stack developer with experience building web applications
          and static pages. I'm passionate about creating elegant solutions to
          complex problems and constantly learning new technologies.
        </p>

        <h3 class="text-2xl font-bold mb-4">Skills</h3>
        <div class="flex flex-wrap gap-3">
          {
            skills.map((skill) => (
              <span class="bg-primary/10 text-primary px-4 py-2 rounded-full">
                {skill}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
